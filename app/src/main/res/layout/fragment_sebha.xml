<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SebhaFragment">

    <!-- TODO: Update blank fragment layout -->
   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/sebhahead"
           android:layout_gravity="center_horizontal"

           />
       <ImageView
           android:id="@+id/img_sebha"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:src="@drawable/sebhaimg"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="-25dp"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:text="@string/count_the_azkar"
           android:textSize="20dp"
           android:layout_marginTop="20dp"
           />
       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:padding="20dp"
           android:background="@drawable/sebha_frame_count">
           <TextView
               android:id="@+id/tv_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="20"
               android:textSize="20sp"
               />
       </FrameLayout>
       <FrameLayout
           android:id="@+id/frame_azkar"
           android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:padding="20dp"
           android:background="@drawable/frame_azkar">
           <TextView
               android:id="@+id/tv_azkar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="sobhan allah"
               android:textSize="20sp"
               />
       </FrameLayout>

   </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>